{
   "$schema": "http://json-schema.org/draft-04/schema#",
   "type": "object",
   "title": "REST Web Services Schema",
   "description": "Definition of REST web services.",
   "definitions": {
      "baseURL": {
         "type": "string",
         "format": "url",
         "title": "Base URL",
         "description": "Base URL for the web service."
      },
      "endpoint": {
         "type": "string",
         "format": "url",
         "title": "Endpoint",
         "description": "Entry point to the service."
      },
      "method": {
         "type": "string",
         "title": "HTTP Method",
         "description": "HTTP method.",
         "enum": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
         ],
         "default": "GET"
      },
      "header": {
         "type": "object",
         "title": "Header",
         "description": "Request header.",
         "properties": {
            "name": {
               "type": "string",
               "title": "Header's Name",
               "description": "Name of the header."
            },
            "value": {
               "type": "string",
               "title": "Header's Value",
               "description": "Value of the header."
            }
         }
      },
      "headers": {
         "type": "array",
         "title": "Headers",
         "description": "Request headers.",
         "items": {
            "$ref": "#/definitions/header"
         }
      },
      "parameter": {
         "type": "object",
         "title": "Parameter",
         "description": "Single parameter.",
         "properties": {
            "parameterType": {
               "type": "string",
               "title": "Parameter's Type",
               "description": "Type of the parameter.",
               "enum": [
                  "path",
                  "search",
                  "form"
               ]
            },
            "name": {
               "type": "string",
               "title": "Parameter's Name",
               "description": "Name of the parameter."
            },
            "value": {
               "type": "string",
               "title": "Parameter's Value",
               "description": "Value of the parameter."
            },
            "valueType": {
               "type": "string",
               "title": "Value's Type",
               "description": "Type of the parameter.",
               "enum": [
                  "string",
                  "number",
                  "boolean",
                  "date"
               ]
            }
         }
      },
      "request": {
         "type": "object",
         "title": "Request Payload",
         "description": "Definition of the parameters for the request.",
         "properties": {
            "parameters": {
               "title": "Parameters",
               "description": "List of parameters for the request.",
               "type": "array",
               "items": {
                  "$ref": "#/definitions/parameter"
               }
            }
         }
      },
      "response": {
         "type": "object",
         "title": "Response Payload",
         "description": "Definition of the response.",
         "properties": {
            "type": {
               "type": "string",
               "title": "Output's Type",
               "description": "Type of the output.",
               "enum": [
                  "string",
                  "number",
                  "boolean",
                  "date",
                  "array",
                  "object"
               ]
            }
         }
      },
      "service": {
         "type": "object",
         "title": "REST Web Service",
         "description": "Definition of the service.",
         "required": [
            "baseURL",
            "endpoint",
            "headers",
            "method",
            "request",
            "response"
         ],
         "properties": {
            "baseURL": {
               "$ref": "#/definitions/baseURL"
            },
            "endpoint": {
               "$ref": "#/definitions/endpoint"
            },
            "headers": {
               "$ref": "#/definitions/headers"
            },
            "method": {
               "$ref": "#/definitions/method"
            },
            "request": {
               "$ref": "#/definitions/request"
            },
            "response": {
               "$ref": "#/definitions/response"
            }
         }
      },
      "services": {
         "type": "array",
         "title": "Services",
         "description": "Available REST Web Services.",
         "items": {
            "$ref": "#/definitions/service"
         }
      }
   },
   "properties": {
      "services": {
         "$ref": "#/definitions/services"
      }
   }
}
